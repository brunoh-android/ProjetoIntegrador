<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="br.bruno.projetointegrador.home.HomeFragment"
        android:label="home_fragments"
        tools:layout="@layout/home_fragments" >
        <action
            android:id="@+id/action_homeFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment">
        <argument
            android:name="id"
            app:argType="integer" />
    </action>
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="br.bruno.projetointegrador.about.view.AboutFragment"
        android:label="about_fragments"
        tools:layout="@layout/about_fragments" />

    <fragment
        android:id="@+id/favoritosFragment"
        android:name="br.bruno.projetointegrador.favorites.view.FavoritosFragment"
        android:label="favoritos_fragments"
        tools:layout="@layout/favoritos_fragments" >
        <argument
            android:name="tittle"
            app:argType="string" />
        <argument
            android:name="poster_path"
            app:argType="string" />
        <argument
            android:name="id"
            app:argType="integer" />
        <action
            android:id="@+id/action_favoritosFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="br.bruno.projetointegrador.profile.view.ProfileFragment"
        android:label="profile_fragments"
        tools:layout="@layout/profile_fragments" />
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="br.bruno.projetointegrador.movieDetails.view.MovieDetailsFragment"
        android:label="fragment_movie_details"
        tools:layout="@layout/fragment_movie_details" >
        <action
            android:id="@+id/action_movieDetailsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="id"
            app:argType="integer" />
        <action
            android:id="@+id/action_movieDetailsFragment_to_favoritosFragment"
            app:destination="@id/favoritosFragment" />
    </fragment>
</navigation>