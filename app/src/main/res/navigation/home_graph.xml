<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_graph"
    app:startDestination="@id/fragmentLogin">

    <fragment
        android:id="@+id/movieFragment"
        android:name="br.bruno.projetointegrador.home.view.MoviesFragment"
        tools:layout="@layout/movies_fragments"/>

    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="br.bruno.projetointegrador.home.view.MovieDetailsFragment"
        android:label="fragment_movie_details"
        tools:layout="@layout/fragment_movie_details">
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>

    <action
        android:id="@+id/action_global_movieDetailsFragment"
        app:destination="@id/movieDetailsFragment">
        <argument
            android:name="id"
            app:argType="integer" />
    </action>
    <fragment
        android:id="@+id/fragmentLogin"
        android:name="br.bruno.projetointegrador.login.ui.FragmentLogin"
        android:label="FragmentLogin" >
        <action
            android:id="@+id/action_fragmentLogin_to_movieFragment"
            app:destination="@id/movieFragment" />
        <action
            android:id="@+id/action_fragmentLogin_to_fragmentRegister"
            app:destination="@id/fragmentRegister" />
    </fragment>
    <fragment
        android:id="@+id/fragmentRegister"
        android:name="br.bruno.projetointegrador.login.ui.FragmentRegister"
        android:label="FragmentRegister" >
        <action
            android:id="@+id/action_fragmentRegister_to_fragmentLogin"
            app:destination="@id/fragmentLogin" />
    </fragment>


</navigation>